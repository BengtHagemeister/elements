{
  "compilerOptions": {
    "declaration": true,
    "resolveJsonModule": true,
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2019",
      "dom"
    ],
    "outDir": "./lib",
    "strict": true,
    "typeRoots": [
      "./types"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "e2e"
  ]
}
